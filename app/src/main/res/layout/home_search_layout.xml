<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/home_search_layout_find_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:src="@drawable/a_4"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/home_search_layout_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:src="@drawable/a_4" />

    <EditText
        android:id="@+id/home_search_layout_edit"
        style="?android:attr/textViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/home_search_layout_find_true"
        android:clickable="false"
        android:hint="@string/search"
        android:visibility="gone" />



    <TextView
        android:id="@+id/home_search_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/home_search_layout_find"
        android:clickable="false"
        android:text="@string/search"
        android:textSize="17sp" />

</RelativeLayout>